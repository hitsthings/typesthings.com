{% from "macros/form.njk" import label, field, textarea, button %}

<form name="contact" method="POST" data-netlify="true" action="/thank-you" netlify-honeypot="baht-field">
  <ol class="[ field-list ]">
    <li class="[ field-list__field-group ]">
      {{ label("What’s your name?", "name") }}
      {{ field( "text", "name", { required: true, placeholder: "Jean-Luc Picard", autocomplete: "name", autocorrect: "off", autocapitalize: "off" } ) }}
    </li>
    <li class="[ field-list__field-group ]">
      {{ label("What’s your email address?", "email") }}
      {{ field( "email", "email", { required: true, placeholder: "picard@starfleet.gov", autocomplete: "email" } ) }}
    </li>
    <li class="[ field-list__field-group ]">
      {{ label("What’s on your mind?", "message") }}
      {{ textarea( "message", { required: true, autocapitalize: "sentences", spellcheck: "true" } ) }}
    </li>
    <li hidden>
      <label>Don’t fill this out if you're human: <input name="baht-field" /></label>
    </li>
  </ol>
  {{ button("Send message") }}
</form>
